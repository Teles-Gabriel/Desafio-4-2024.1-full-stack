{
  "name": "Husky",
  "version": "1.0.0",
  "author": "Gabriel Teles",
  "description": "Repositório do grupo VVAGA. Esse arquivo é referente as ferramentas de padronização de commits",
  "scripts": {
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11"
  }
}
